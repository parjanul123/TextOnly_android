<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VINDE ONLYCOINS"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- VALUTÄ‚ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ValutÄƒ de primire:"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCurrencySell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- ðŸ”¥ PREVIEW SUMÄ‚ -->
        <TextView
            android:id="@+id/txtSellPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vei primi: 0"
            android:textColor="#00E676"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- SUMA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suma de retras (OnlyCoins):"
            android:textColor="@android:color/white"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            
            <EditText
                android:id="@+id/edit_sell_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Introdu suma de monede"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="#AAAAAA" />
                
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/onlycoin"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extrage"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
