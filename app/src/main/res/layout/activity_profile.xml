<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- ðŸ“¸ PozÄƒ de Profil -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            
            <!-- Avatar Image -->
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:clickable="true"
                android:contentDescription="PozÄƒ de profil"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/textonly_round" />
                
            <!-- Static Frame (For simple images) -->
            <ImageView
                android:id="@+id/img_avatar_frame"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:src="@drawable/ic_coin_shape" /> 

            <!-- Animated Frame (Custom View) -->
            <text.only.app.AnimatedFrameView
                android:id="@+id/view_animated_frame"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="SchimbÄƒ"
                android:textColor="@android:color/white"
                android:background="#80000000"
                android:padding="4dp"
                android:textSize="12sp" />
        </FrameLayout>

        <EditText
            android:id="@+id/edit_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nume afiÈ™at"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>



        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SalveazÄƒ Profil"
            android:layout_marginBottom="12dp"/>

        <!-- ðŸ’° Buton Portofel -->
        <Button
            android:id="@+id/btn_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’° Portofel OnlyCoins"
            android:backgroundTint="#FFD700"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />
            
        <!-- ðŸª Magazin -->
        <Button
            android:id="@+id/btn_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸª Magazin (Store)"
            android:layout_marginTop="8dp" />

        <!-- ðŸŽ’ Inventar -->
        <Button
            android:id="@+id/btn_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ’ Inventar"
            android:layout_marginTop="8dp" />

        <!-- ðŸ“œ Jurnal TranzacÈ›ii -->
        <Button
            android:id="@+id/btn_transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“œ Jurnal TranzacÈ›ii"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
