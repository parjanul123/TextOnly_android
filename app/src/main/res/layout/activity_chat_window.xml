<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- ðŸ”¹ Bara de sus cu nume È™i butoane -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#1E1E1E"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/txtContactName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nume Contact"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:contentDescription="Apel vocal" />

        <ImageButton
            android:id="@+id/btnVideoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:layout_marginStart="8dp"
            android:contentDescription="Apel video" />

        <ImageButton
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:layout_marginStart="8dp"
            android:contentDescription="Detalii contact" />
    </LinearLayout>

    <!-- ðŸ”¹ Lista de mesaje -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- ðŸ”¹ Bara de jos pentru scriere mesaje -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#1E1E1E">

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Scrie un mesaj..."
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trimite"
            android:backgroundTint="@color/purple_500"
            android:layout_marginStart="6dp" />
    </LinearLayout>
</LinearLayout>
